{
  "include": ["index.ts", "src"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "esnext",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
