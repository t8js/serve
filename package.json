{
  "name": "@t8/serve",
  "version": "0.2.1",
  "description": "Simple static file server + bundler, primarily for demo apps and tests, manual or automated",
  "keywords": [
    "node",
    "server",
    "static server",
    "bundler"
  ],
  "bin": {
    "serve": "./dist/run.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/serve.git"
  },
  "license": "MIT",
  "author": "axtk",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "compile-bin": "npx esbuild src/run.ts --bundle --outfile=dist/run.mjs --platform=node --format=esm --external:esbuild",
    "preversion": "npx npm-run-all shape compile-bin",
    "shape": "npx codeshape"
  },
  "devDependencies": {
    "@types/node": "^25.0.3"
  },
  "dependencies": {
    "args-json": "^1.2.10",
    "esbuild": "^0.27.2"
  }
}
